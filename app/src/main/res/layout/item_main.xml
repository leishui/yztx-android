<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_video_main_1"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_cover_main_1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/temp"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_change_pink"
                android:paddingTop="15dp">
                <ImageView
                    android:id="@+id/iv_video_count"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_video"
                    android:alpha="1"/>
                <TextView
                    android:layout_toEndOf="@id/iv_video_count"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/pink"
                    android:text="11.1万"/>
                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/pink"
                    android:text="11:11"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="120dp"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title_main_1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="dadadadadadadadadasda"
                    android:textColor="@color/pink"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_video_main_2"
            app:cardCornerRadius="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_cover_main_2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/temp"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_change_pink"
                android:paddingTop="15dp">
                <ImageView
                    android:id="@+id/iv_video_count_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_video"
                    android:padding="5dp"
                    android:alpha="1"/>
                <TextView
                    android:layout_toEndOf="@id/iv_video_count_2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/pink"
                    android:text="11.1万"/>
                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textColor="@color/pink"
                    android:text="11:11"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="120dp"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title_main_2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="dadadadadadadadadasda"
                    android:textColor="@color/pink"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>