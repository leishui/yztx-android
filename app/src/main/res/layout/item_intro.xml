<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_video_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name_video"
            android:text="name"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_des_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"/>
        <TextView
            android:text="88积分"
            android:textColor="@color/orange_dark"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="共14期"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_alignParentEnd="true"
                android:text="10.9万播放"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_20"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布者"
            android:textColor="@color/black"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/rl_video_1"
        android:layout_below="@id/ll_video_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.rishabhharit.roundedimageview.RoundedImageView
            app:cornerRadius="50dp"
            app:roundedCorners="all"
            android:id="@+id/ri_avatar_video"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/a"/>
        <TextView
            android:id="@+id/tv_up_name_video"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="10086"
            android:layout_marginLeft="10dp"
            android:textColor="@color/pink"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/ri_avatar_video"/>
        <TextView
            android:id="@+id/tv_up_time_comment"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="1008611"
            android:layout_marginLeft="10dp"
            android:textColor="@color/pink"
            android:layout_toEndOf="@id/ri_avatar_video"
            android:layout_below="@+id/tv_up_name_video"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="+关注"
            android:textColor="@color/white"
            android:background="@drawable/bg_bt_normal"
            android:layout_height="30dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_vieo_1"
        android:layout_below="@id/rl_video_1"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相关课程"
        android:textColor="@color/black"/>
    <View
        android:layout_below="@id/tv_vieo_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_20"/>


</RelativeLayout>