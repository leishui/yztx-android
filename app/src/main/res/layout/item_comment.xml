<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <com.rishabhharit.roundedimageview.RoundedImageView
            android:id="@+id/ri_avatar_comment"
            app:cornerRadius="50dp"
            app:roundedCorners="all"
            android:src="@drawable/g"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/tv_up_name_comment"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="XXXXXX"
            android:layout_marginStart="10dp"
            android:textColor="@color/pink"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/ri_avatar_comment"/>
        <TextView
            android:id="@+id/tv_up_time_comment"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="7-29"
            android:layout_marginStart="10dp"
            android:textColor="@color/pink"
            android:layout_toEndOf="@id/ri_avatar_comment"
            android:layout_below="@+id/tv_up_name_comment"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="70dp"
        tools:ignore="RtlSymmetry">
        <TextView
            android:id="@+id/tv_comment_content"
            android:text="XXXXXXXXXX"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:id="@+id/v_item_comment"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_20"/>

</LinearLayout>