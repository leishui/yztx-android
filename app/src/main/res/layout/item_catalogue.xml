<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root_catalogue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/tv_id_catalogue"
            android:src="@drawable/g"
            android:text="1"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/tv_title_catalogue"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="XXXXXX"
            android:layout_marginStart="10dp"
            android:textColor="@color/pink"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/tv_id_catalogue"/>
        <TextView
            android:id="@+id/tv_time_catalogue"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="7-29"
            android:layout_marginStart="10dp"
            android:textColor="@color/pink"
            android:layout_toEndOf="@id/tv_id_catalogue"
            android:layout_below="@+id/tv_title_catalogue"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_20"/>

</LinearLayout>